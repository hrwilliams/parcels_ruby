<h1>Ship your package</h1>

<form action="/parcel">
  <div class="form-group">
    <label for="length">Length package in feet</label>
    <input id="length" name="length" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="width">Width of package in feet</label>
    <input id="width" name="width" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="height">Height of package in feet</label>
    <input id="height" name="height" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label>What type of shipping?</label>
    <select class="form-control" id="speed" name="speed" for="speed">
      <option name="regular" for="speed" value="1">Regular Shipping</option>
      <option name="overnight" for="speed" value="2">Overnight Shipping</option>
    </select>
    <!-- <label for="speed">Speed: enter 1 for regular, 2 for overnight</label>
    <input id="speed" name="speed" class="form-control" type="text"> -->
  </div>
  <div class="form-group">
    <label for="weight">Weight in pounds</label>
    <input id="weight" name="weight" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">submit</button>
</form>
